				<Trigger Property="IsMouseOver"
						 Value="true">
					<Setter Property="Cursor"
							Value="Hand" />
					<Setter Property="Fill"
							TargetName="Ellipse"
							Value="#15FFFFFF" />
				</Trigger>
				<Trigger Property="IsPressed"
