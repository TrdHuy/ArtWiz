<UserControl x:Class="SPRNetTool.View.Widgets.FrameLineEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SPRNetTool.View.Widgets"
             mc:Ignorable="d"
			 xmlns:cvt="clr-namespace:SPRNetTool.View.Utils"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	
	<UserControl.Resources>
		<cvt:FormulaConverter x:Key="FormulaConverter" />
	</UserControl.Resources>

	<Grid Height="500"
		  Width="500">
		<StackPanel>
			<Button Height="30"
					Width="100"
					Click="Button_Click" />
			<Button Height="30"
					Width="100"
					Click="Button_Click2" />
			<Button Height="30"
					Width="120"
					Content="Set frame count 20"
					Click="Button_Click3" />
			<Button Height="30"
					Width="130"
					Content="Change display idx"
					Click="Button_Click4" />
		</StackPanel>
		
		<ScrollViewer x:Name="ScrView"
					  Grid.Row="1"
					  Width="500"
					  Background="Black"
					  Height="100"
					  VerticalScrollBarVisibility="Auto"
					  HorizontalScrollBarVisibility="Auto">
			<ScrollViewer.Resources>
				<sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">10</sys:Double>
			</ScrollViewer.Resources>
			<Canvas x:Name="MainCanvas"
					Height="80"
					Background="Gray"
					Width="900">
				<Canvas.ContextMenu>
					<ContextMenu Name="cm"
								 StaysOpen="true">
						<MenuItem Header="File" />
						<MenuItem Header="Save" />
						<MenuItem Header="SaveAs" />
						<MenuItem Header="Recent Files">
							<MenuItem Header="ReadMe.txt" />
							<MenuItem Header="Schedule.xls" />
						</MenuItem>
					</ContextMenu>
				</Canvas.ContextMenu>
				<Line X1="0"
					  X2="{Binding RelativeSource={RelativeSource AncestorType={x:Type Canvas}, Mode=FindAncestor}, Path=ActualWidth}"
					  Stroke="Black"
					  StrokeThickness="5">
					<Line.Y1>
						<MultiBinding Converter="{StaticResource FormulaConverter}"
									  ConverterParameter=" {0} * {1}">
							<Binding Path="ActualHeight"
									 FallbackValue="0.5" />
							<Binding Path="ActualHeight"
									 RelativeSource="{RelativeSource AncestorType={x:Type Canvas}, Mode=FindAncestor}" />
						</MultiBinding>
					</Line.Y1>
					<Line.Y2>
						<MultiBinding Converter="{StaticResource FormulaConverter}"
									  ConverterParameter="0.5 * {0}">
							<Binding Path="ActualHeight"
									 RelativeSource="{RelativeSource AncestorType={x:Type Canvas}, Mode=FindAncestor}" />
						</MultiBinding>
					</Line.Y2>
				</Line>

